<input type="text" id="zipInput" placeholder="Enter your ZIP code">
<button onclick="checkZip()">Check Service Area</button>
<p id="result"></p>

<script>
  const serviceZips = ["43015", "43016", "43017", "43026", "43035", "43065", "43085", "43119", "43123", "43302"];
  
  function checkZip() {
    const input = document.getElementById("zipInput").value;
    const result = document.getElementById("result");
    if (serviceZips.includes(input)) {
      result.innerText = "✅ Great! We service your area.";
    } else {
      result.innerText = "❌ Sorry, we currently do not service this ZIP code.";
    }
  }
</script>
